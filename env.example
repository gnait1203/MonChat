APP_NAME=MonChat
ENV=dev
DEBUG=true
FRONTEND_ORIGIN=http://localhost:8443

# VectorDB 실제 실행(임베딩 활성화)
VECTORDB_ENABLED=true
VECTORDB_HOST=localhost
VECTORDB_PORT=5432
VECTORDB_DB=monchat
VECTORDB_USER=monchat
VECTORDB_PASSWORD=monchat
VECTORDB_SSLMODE=disable
EMBEDDING_DIM=1024

# Oracle 비활성화
ORACLE_ENABLED=false
ORACLE_MODE=RAC
ORACLE_RAC_HOSTS=rac-host-1,rac-host-2

# MOCK CSV 사용
MOCK_DB_ENABLED=true
MOCK_DB_DIR=mock_data

# 로그 디렉토리 사용 안함(모든 이벤트는 CSV에서 읽음)
LOG_WAS_ENABLED=false
LOG_DB_ENABLED=false
WAS_LOG_DIR=.\\was-server
DB_LOG_DIR=.\\db-server

# ETL 1일
ETL_DAYS=1

# 임베딩 모델/디바이스 (GPU 있으면 cuda 자동 사용)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_BATCH_SIZE=128
EMBEDDING_DEVICE=auto

API_HOST=0.0.0.0
API_PORT=5443
STREAMLIT_PORT=8443

# 내부 LLM 설정 (사내 Ollama 서버)
LLM_ENABLED=true
LLM_BASE_URL=http://pgaiap09:11434
LLM_CHAT_PATH=/api/chat
LLM_DEFAULT_MODEL=qwen3:8b
LLM_STREAM=false
LLM_TIMEOUT=120

# Hugging Face 로컬 모델/캐시 설정 (선택)
# 로컬 모델 디렉터리를 사용할 경우 아래 경로를 설정하면 네트워크 없이 동작합니다.
# Windows 예시: hf\bge-m3  (프로젝트 루트 기준 상대 경로)
HF_LOCAL_MODEL_DIR=hf\bge-m3
# HF_CACHE_DIR=.\.hf-cache
# HF_TOKEN=

